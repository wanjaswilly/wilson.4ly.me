{% extends "layout.twig" %}
{% block title %}Page Not Found |
	{{ parent() }}
{% endblock %}
{% block content %}
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 flex items-center">
  <div class="max-w-4xl mx-auto py-16 px-4 sm:px-6 lg:px-8 text-center">
    <!-- Animated 404 Illustration -->
    <div class="relative mx-auto w-64 h-64 mb-8">
      <div class="absolute inset-0 bg-gradient-to-r from-red-400 to-pink-500 rounded-full opacity-20 blur-xl animate-pulse"></div>
      <div class="relative flex items-center justify-center w-full h-full">
        <svg class="h-48 w-48 text-red-500 dark:text-red-400 animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
    </div>

    <!-- Error Message -->
    <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 dark:text-white mb-4">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-red-500 to-pink-600">404</span>
    </h1>
    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-gray-200 mb-2">Page Not Found</h2>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-md mx-auto">
      Oops! The page you're looking for doesn't exist or has been moved.
    </p>
    {% if APP_ENVIRONMENT == "DEV" %}
    <p class="mt-2 text-sm text-gray-500 dark:text-gray-500 font-mono bg-gray-100 dark:bg-gray-800 p-2 rounded-md inline-block">
      {{ message }}
    </p>
    {% endif %}

    <!-- Suggested Actions -->
    <div class="mt-10 bg-white dark:bg-gray-800/50 backdrop-blur-sm rounded-xl shadow-lg overflow-hidden border border-gray-200 dark:border-gray-700 max-w-md mx-auto">
      <div class="px-6 py-8">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4 text-left">What might have happened?</h3>
        <ul class="space-y-3 text-left">
          <li class="flex items-start">
            <svg class="h-5 w-5 text-red-500 dark:text-red-400 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-600 dark:text-gray-400">The page has moved or been renamed</span>
          </li>
          <li class="flex items-start">
            <svg class="h-5 w-5 text-red-500 dark:text-red-400 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <span class="text-gray-600 dark:text-gray-400">You typed the address incorrectly</span>
          </li>
          <li class="flex items-start">
            <svg class="h-5 w-5 text-red-500 dark:text-red-400 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            <span class="text-gray-600 dark:text-gray-400">The page no longer exists</span>
          </li>
        </ul>

        <!-- Action Buttons -->
        <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2">
          <a href="/" class="w-full flex items-center justify-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:-translate-y-0.5">
            Go to homepage
          </a>
          <a href="/contact" class="w-full flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm text-base font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors duration-300">
            Contact support
          </a>
        </div>
      </div>
    </div>

    <!-- Additional Help -->
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        Still stuck? <a href="/help" class="font-medium text-blue-600 dark:text-blue-400 hover:underline transition-colors duration-300">Visit our help center</a>
      </p>
    </div>
  </div>
</div>
{% endblock %}
