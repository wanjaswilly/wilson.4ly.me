{% extends "layout.twig" %}
{% block title %}Page Not Found |
	{{ parent() }}
{% endblock %}

{% block content %}
	<div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
		<div class="sm:mx-auto sm:w-full sm:max-w-md">
			<div class="text-center">
				<svg class="mx-auto h-12 w-12 text-red-500" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
				</svg>
				<h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
					404 - Page Not Found
				</h1>
				<p class="mt-2 text-center text-lg text-gray-600">
					Oops! The page you're looking for doesn't exist.
				</p>
				<p class="mt-2 text-center text-lg text-gray-600">
					{% if APP_ENVIRONMENT == "DEV" %} {{ message }} {% endif %}
				</p>
			</div>

			<div class="mt-8 bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
				<div class="space-y-4">
					<div>
						<h2 class="text-lg font-medium text-gray-900">What might have happened?</h2>
						<ul class="mt-2 list-disc list-inside text-gray-600 space-y-1">
							<li>The page has moved or been renamed</li>
							<li>You typed the address incorrectly</li>
							<li>The page no longer exists</li>
						</ul>
					</div>

					<div class="mt-6 grid grid-cols-2 gap-3">
						<a href="/" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
							Go to homepage
						</a>
						<a href="/contact" class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
							Contact support
						</a>
					</div>
				</div>
			</div>

			<div class="mt-8 text-center text-sm text-gray-600">
				<p>Still stuck?
					<a href="/help" class="font-medium text-red-600 hover:text-red-500">Visit our help center</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}
