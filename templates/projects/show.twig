{% extends 'layout.twig' %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <article class="max-w-4xl mx-auto">
        {% if project.image_url %}
        <img src="{{ project.image_url }}" alt="{{ project.title }}" class="w-full h-64 object-cover rounded-lg mb-8">
        {% endif %}
        
        <h1 class="text-4xl font-bold mb-4">{{ project.title }}</h1>
        
        <div class="flex flex-wrap gap-4 mb-6">
            {% if project.start_date %}
            <div class="text-gray-600">
                <span class="font-semibold">Started:</span> {{ project.start_date|date('F Y') }}
            </div>
            {% endif %}
            {% if project.end_date %}
            <div class="text-gray-600">
                <span class="font-semibold">Completed:</span> {{ project.end_date|date('F Y') }}
            </div>
            {% endif %}
        </div>
        
        <div class="flex flex-wrap gap-2 mb-8">
            {% for tech in project.technologies %}
            <span class="px-3 py-1 bg-gray-100 text-gray-800 text-sm rounded-full">{{ tech }}</span>
            {% endfor %}
        </div>
        
        <div class="prose max-w-none">
            {{ project.content|raw }}
        </div>
        
        <div class="mt-8 pt-6 border-t border-gray-200 flex gap-4">
            {% if project.github_url %}
            <a href="{{ project.github_url }}" target="_blank" class="px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-700 flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
                View on GitHub
            </a>
            {% endif %}
            {% if project.live_url %}
            <a href="{{ project.live_url }}" target="_blank" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path></svg>
                Live Demo
            </a>
            {% endif %}
        </div>
    </article>
</div>
{% endblock %}