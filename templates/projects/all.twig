{% extends 'layout.twig' %}

{% block title %}My Projects{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">My Projects</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for project in projects %}
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            {% if project.image_url %}
            <img src="{{ project.image_url }}" alt="{{ project.title }}" class="w-full h-48 object-cover">
            {% endif %}
            <div class="p-6">
                <h2 class="text-xl font-bold mb-2">
                    <a href="/projects/{{ project.slug }}" class="hover:text-blue-600">{{ project.title }}</a>
                </h2>
                <p class="text-gray-600 mb-4">{{ project.description }}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                    {% for tech in project.technologies %}
                    <span class="px-2 py-1 bg-gray-100 text-gray-800 text-sm rounded">{{ tech }}</span>
                    {% endfor %}
                </div>
                <div class="flex justify-between items-center">
                    {% if project.github_url %}
                    <a href="{{ project.github_url }}" target="_blank" class="text-gray-500 hover:text-gray-700">
                        GitHub
                    </a>
                    {% endif %}
                    {% if project.live_url %}
                    <a href="{{ project.live_url }}" target="_blank" class="text-blue-600 hover:text-blue-800">
                        Live Demo
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}