{% extends 'admin.twig' %}

{% block title %}
	Admin Dashboard
{% endblock %}
{% block header_title %}
	Dashboard
{% endblock %}

{% block content %}
	<!-- Stats Cards -->
	<div
		class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
		<!-- Hotels -->
		<div class="bg-white shadow rounded-lg p-6 hover:shadow-lg transition">
			<div class="flex items-center justify-between">
				<div>
					<h2 class="text-xl font-bold mb-2">Blog</h2>
					<p class="text-gray-600 mb-4">Manage blog</p>
				</div>
				<span class="text-3xl font-bold text-blue-600">42</span>
			</div>
			<a href="/admin/blog" class="block w-full text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
				Manage
			</a>
		</div>

		<!-- Restaurants -->
		<div class="bg-white shadow rounded-lg p-6 hover:shadow-lg transition">
			<div class="flex items-center justify-between">
				<div>
					<h2 class="text-xl font-bold mb-2">Projects</h2>
					<p class="text-gray-600 mb-4">Manage all Projects</p>
				</div>
				<span class="text-3xl font-bold text-green-600">18</span>
			</div>
			<a href="/admin/projects" class="block w-full text-center bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
				Manage
			</a>
		</div>

		<!-- Tours -->
		<div class="bg-white shadow rounded-lg p-6 hover:shadow-lg transition">
			<div class="flex items-center justify-between">
				<div>
					<h2 class="text-xl font-bold mb-2">Site Statistics</h2>
					<p class="text-gray-600 mb-4">View sute activities</p>
				</div>
				<span class="text-3xl font-bold text-yellow-600">25</span>
			</div>
			<a href="/admin/stats" class="block w-full text-center bg-yellow-600 text-white px-4 py-2 rounded hover:bg-yellow-700">
				Manage
			</a>
		</div>
	</div>

	<!-- Recent Activity -->
	<div class="bg-white shadow rounded-lg p-6 mb-8">
		<h2 class="text-xl font-bold mb-4">Recent Activity</h2>
		<div class="space-y-4">
			<div class="flex items-start">
				<div class="bg-blue-100 p-2 rounded-full mr-3">
					<i class="fas fa-hotel text-blue-600"></i>
				</div>
				<div>
					<p class="font-medium">New hotel added</p>
					<p class="text-sm text-gray-500">Grand Plaza Hotel was added 2 hours ago</p>
				</div>
				<span class="ml-auto text-sm text-gray-500">10:45 AM</span>
			</div>
			<div class="flex items-start">
				<div class="bg-green-100 p-2 rounded-full mr-3">
					<i class="fas fa-utensils text-green-600"></i>
				</div>
				<div>
					<p class="font-medium">Restaurant updated</p>
					<p class="text-sm text-gray-500">Seaside Bistro menu was updated</p>
				</div>
				<span class="ml-auto text-sm text-gray-500">Yesterday</span>
			</div>
		</div>
	</div>
{% endblock %}
